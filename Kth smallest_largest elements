//Kâ€™th Smallest/Largest Element in Unsorted Array

#include<algorithm>
#include<iostream>

using namespace std;

int smallest_largest(int arr[], int n, int k)
{
    sort(arr,arr+n);
    return arr[k-1];
}

int main()
{
    int arr[]={12, 3, 5, 7, 19 };
    int n,k=2;
    n = sizeof(arr)/sizeof(arr[0]);
    cout<<smallest_largest(arr,n,k);

    return 0;
}

Time complexity: O(nlogn)
